{
  "version": 2,
  "builds": [
    {
      "src": "src/api/telegram-webhook.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/telegram-webhook",
      "dest": "src/api/telegram-webhook.ts",
      "methods": ["POST", "GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 